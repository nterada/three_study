{
  "root": true,
  "extends": "eslint:recommended",
  "rules": {
    "indent": [ 2, 2 ],
    "linebreak-style": [ 2, "windows" ],
    "semi": [ 2, "always" ],
    "no-unused-vars": [0],
    "no-console": [1, { "allow": ["warn", "error", "info"] }],
    "quotes": [2, "single", {"avoidEscape": true, "allowTemplateLiterals": true}],
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
